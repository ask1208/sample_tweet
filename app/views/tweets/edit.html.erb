<div class="contents row">
  <div class="container">
    <%= form_with(model:@tweet,local: true) do |form| %>
      <h3>編集</h3>
      <%=form.text_field :name, placeholder: "Nickname" %>
      <%=form.text_field :image, placeholder: "Image Url" %>
      <%=form.text_field :text, placeholder: "text" , rows: "10" %>
      <%= form.submit "送信" %>
    <% end %>
  </div>
</div>